<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/stocksListFragment">

    <fragment
        android:id="@+id/stocksListFragment"
        android:name="com.zelyder.stocksapp.presentation.stockslist.StocksListFragment"
        android:label="fragment_stocks_list"
        tools:layout="@layout/fragment_stocks_list" >
        <action
            android:id="@+id/action_stocksListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.zelyder.stocksapp.presentation.searchscreen.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.zelyder.stocksapp.presentation.details.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="stock"
            app:argType="com.zelyder.stocksapp.domain.models.Stock" />
    </fragment>
    <action android:id="@+id/action_global_detailsFragment" app:destination="@id/detailsFragment" />
</navigation>